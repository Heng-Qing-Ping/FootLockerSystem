<% if (!user) { %>
<!-- Landing Page for Non-authenticated Users -->
<div class="hero-section bg-dark text-white py-5 mb-5 rounded">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">Welcome to FOOTLOCKER</h1>
        <p class="lead mb-4">Discover the latest in athletic footwear and apparel</p>
        <div class="d-flex gap-3 justify-content-center">
            <a href="/login" class="btn btn-warning btn-lg">Login</a>
            <a href="/register" class="btn btn-outline-light btn-lg">Sign Up</a>
        </div>
    </div>
</div>

<!-- Featured Categories -->
<div class="row mb-5">
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-running fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Running</h5>
                <p class="card-text">Premium running shoes for every athlete</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-basketball-ball fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Basketball</h5>
                <p class="card-text">Court-ready shoes from top brands</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fas fa-tshirt fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Lifestyle</h5>
                <p class="card-text">Casual wear for everyday comfort</p>
            </div>
        </div>
    </div>
</div>
<% } else { %>
<!-- Authenticated User Home Page -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Welcome back, <%= user.username %>!</h1>
    <a href="/products" class="btn footlocker-orange text-white">Shop Now</a>
</div>
<% } %>

<!-- Featured Products -->
<h2 class="mb-4">Featured Products</h2>
<div class="row">
    <% if (products && products.length > 0) { %>
        <% products.slice(0, 8).forEach(product => { %>
        <div class="col-md-3 mb-4">
            <div class="card product-card h-100">
                <% if (product.image_url) { %>
                <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                <% } else { %>
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-image fa-3x text-muted"></i>
                </div>
                <% } %>
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title"><%= product.name %></h6>
                    <p class="text-muted small"><%= product.brand %></p>
                    <p class="text-warning fw-bold mt-auto">$<%= parseFloat(product.price).toFixed(2) %></p>
                    <% if (user) { %>
                    <button class="btn btn-sm footlocker-orange text-white" onclick="addToCart(<%= product.id %>)">
                        <i class="fas fa-cart-plus"></i> Add to Cart
                    </button>
                    <% } %>
                </div>
            </div>
        </div>
        <% }); %>
    <% } else { %>
    <div class="col-12 text-center">
        <p class="text-muted">No products available at the moment.</p>
    </div>
    <% } %>
</div>

<script>
function addToCart(productId) {
    fetch('/cart/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            product_id: productId,
            quantity: 1
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Product added to cart!');
        } else {
            alert('Error adding product to cart');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error adding product to cart');
    });
}
</script>