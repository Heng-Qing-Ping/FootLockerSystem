
<form action="/products/search" method="GET" class="mb-4">
  <div class="input-group">
    <input type="text" name="q" class="form-control" placeholder="Search products..." value="<%= typeof query !== 'undefined' ? query : '' %>">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Products</h1>
</div>

<!-- Search and Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/products" class="row g-3">
            <div class="col-md-3">
                <input type="text" class="form-control" name="search" placeholder="Search products..." value="<%= filters.search || '' %>">
            </div>
            <div class="col-md-2">
                <select class="form-control" name="category">
                    <option value="">All Categories</option>
                    <option value="Basketball" <%= filters.category === 'Basketball' ? 'selected' : '' %>>Basketball</option>
                    <option value="Running" <%= filters.category === 'Running' ? 'selected' : '' %>>Running</option>
                    <option value="Lifestyle" <%= filters.category === 'Lifestyle' ? 'selected' : '' %>>Lifestyle</option>
                    <option value="Training" <%= filters.category === 'Training' ? 'selected' : '' %>>Training</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-control" name="brand">
                    <option value="">All Brands</option>
                    <option value="Nike" <%= filters.brand === 'Nike' ? 'selected' : '' %>>Nike</option>
                    <option value="Adidas" <%= filters.brand === 'Adidas' ? 'selected' : '' %>>Adidas</option>
                    <option value="Puma" <%= filters.brand === 'Puma' ? 'selected' : '' %>>Puma</option>
                    <option value="Reebok" <%= filters.brand === 'Reebok' ? 'selected' : '' %>>Reebok</option>
                    <option value="Converse" <%= filters.brand === 'Converse' ? 'selected' : '' %>>Converse</option>
                    <option value="New Balance" <%= filters.brand === 'New Balance' ? 'selected' : '' %>>New Balance</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-control" name="sort">
                    <option value="">Sort By</option>
                    <option value="price_asc" <%= filters.sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                    <option value="price_desc" <%= filters.sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                    <option value="name" <%= filters.sort === 'name' ? 'selected' : '' %>>Name</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn footlocker-orange text-white me-2">Filter</button>
                <a href="/products" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<!-- Products Grid -->
<div class="row">
    <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
        <div class="col-md-3 mb-4">
            <div class="card product-card h-100">
                <% if (product.image_url) { %>
                <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                <% } else { %>
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-image fa-3x text-muted"></i>
                </div>
                <% } %>
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title"><%= product.name %></h6>
                    <p class="text-muted small"><%= product.brand %> â€¢ <%= product.category %></p>
                    <% if (product.description) { %>
                    <p class="card-text small text-muted"><%= product.description.substring(0, 100) %>...</p>
                    <% } %>
                    <div class="mt-auto">
                        <p class="text-warning fw-bold mb-2">$<%= parseFloat(product.price).toFixed(2) %></p>
                        <% if (product.stock > 0) { %>
                        <p class="small text-success mb-2"><i class="fas fa-check"></i> In Stock (<%= product.stock %> left)</p>
                        <% } else { %>
                        <p class="small text-danger mb-2"><i class="fas fa-times"></i> Out of Stock</p>
                        <% } %>
                        <% if (user && product.stock > 0) { %>
                        <button class="btn btn-sm footlocker-orange text-white w-100" onclick="addToCart(<%= product.id %>)">
                            <i class="fas fa-cart-plus"></i> Add to Cart
                        </button>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    <% } else { %>
    <div class="col-12 text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No products found</h4>
        <p class="text-muted">Try adjusting your search filters</p>
        <a href="/products" class="btn footlocker-orange text-white">View All Products</a>
    </div>
    <% } %>
</div>

<script>
function addToCart(productId) {
    const quantity = prompt('Enter quantity:', '1');
    const size = prompt('Enter size (optional):', '');
    
    if (quantity && parseInt(quantity) > 0) {
        fetch('/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                product_id: productId,
                quantity: parseInt(quantity),
                size: size || ''
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Product added to cart!');
            } else {
                alert('Error adding product to cart');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error adding product to cart');
        });
    }
}
</script>