<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= product.name %> | Footlocker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container my-5">
    <div class="row">
      <div class="col-md-6">
        <% if (product.image_url) { %>
          <img src="<%= product.image_url %>" class="img-fluid rounded shadow" alt="<%= product.name %>">
        <% } else { %>
          <img src="/images/no-image.png" class="img-fluid rounded shadow" alt="No image available">
        <% } %>
      </div>

      <div class="col-md-6">
        <h2><%= product.name %></h2>
        <p><strong>Brand:</strong> <%= product.brand %></p>
        <p><strong>Category:</strong> <%= product.category %></p>
        <p><strong>Description:</strong> <%= product.description %></p>
        <p><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
        <p><strong>Stock:</strong> <%= product.stock %> available</p>

        <% if (user && user.role === 'user') { %>
          <form action="/cart/add/<%= product.id %>" method="POST">
            <div class="mb-3">
              <label for="size" class="form-label">Select Size</label>
              <select name="size" class="form-select" required>
                <option value="">Choose...</option>
                <% ['US 6', 'US 7', 'US 8', 'US 9', 'US 10', 'US 11'].forEach(size => { %>
                  <option value="<%= size %>"><%= size %></option>
                <% }) %>
              </select>
            </div>

            <div class="mb-3">
              <label for="quantity" class="form-label">Quantity</label>
              <input type="number" name="quantity" class="form-control" min="1" max="<%= product.stock %>" value="1" required>
            </div>

            <button type="submit" class="btn btn-success">Add to Cart</button>
          </form>
        <% } else { %>
          <p class="text-muted">Login as a user to add this product to your cart.</p>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
