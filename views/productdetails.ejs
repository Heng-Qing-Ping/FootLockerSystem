<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> - Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('navbar') %>

    <div class="container mt-5">
        <div class="row">
            <!-- Product Image -->
            <div class="col-md-6 text-center">
                <% if (product.image_url) { %>
                    <img src="<%= product.image_url %>" class="img-fluid rounded shadow">
                <% } else { %>
                    <img src="https://via.placeholder.com/500x350?text=No+Image" class="img-fluid rounded shadow">
                <% } %>
            </div>

            <!-- Product Details -->
            <div class="col-md-6">
                <h2 class="fw-bold"><%= product.name %></h2>
                <p class="text-success fs-4 fw-bold">$<%= parseFloat(product.price).toFixed(2) %></p>

                <!-- Available Sizes -->
                <h5 class="mt-4">Available Sizes:</h5>
                <ul class="list-group mb-3">
                    <% if (sizes.length === 0) { %>
                        <li class="list-group-item text-muted">No sizes available</li>
                    <% } else { %>
                        <% sizes.forEach(size => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= size.size %>
                                <% if (size.stock > 0) { %>
                                    <span class="badge bg-success"><%= size.stock %> in stock</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Out of stock</span>
                                <% } %>
                            </li>
                        <% }) %>
                    <% } %>
                </ul>

                <!-- Size Selection and Add to Cart -->
                <% if (user) { %>
                    <form action="/cart/add/<%= product.id %>" method="POST" class="mt-3">
                        <div class="mb-3">
                            <label for="sizeSelect" class="form-label">Select Size:</label>
                            <select name="size_id" class="form-select" required>
                                <% sizes.forEach(size => { %>
                                    <option value="<%= size.id %>" <%= size.stock === 0 ? 'disabled' : '' %>>
                                        <%= size.size %> 
                                        (<%= size.stock > 0 ? size.stock + ' in stock' : 'Out of stock' %>)
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                        <button class="btn btn-primary mt-2" <%= sizes.length === 0 ? 'disabled' : '' %>>
                            Add to Cart
                        </button>
                    </form>
                <% } %>

                <!-- Admin Buttons -->
                <% if (user && user.role === 'admin') { %>
                    <a href="/products/edit/<%= product.id %>" class="btn btn-warning me-2 mt-3">Edit</a>
                    <form action="/products/delete/<%= product.id %>" method="POST" style="display:inline-block">
                        <button type="submit" class="btn btn-danger mt-3">Delete</button>
                    </form>
                <% } %>

                <!-- Back Button -->
                <div class="mt-4">
                    <a href="/products" class="btn btn-secondary">Back to Products</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
