<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('navbar') %>

    <div class="container mt-5">
        <h2 class="mb-4">Add New Product</h2>

        <form action="/products/add" method="POST" enctype="multipart/form-data" class="card p-4 shadow-sm">
            <div class="mb-3">
                <label class="form-label">Product Name</label>
                <input type="text" name="name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Price ($)</label>
                <input type="number" step="0.01" name="price" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Product Image</label>
                <input type="file" name="image" class="form-control">
            </div>

            <!-- Sizes and Stock -->
            <h5>Sizes & Stock</h5>
            <div id="sizes-container" class="mb-3">
                <div class="input-group mb-2">
                    <input type="text" name="sizes" placeholder="Size (e.g., US 8)" class="form-control">
                    <input type="number" name="stocks" placeholder="Stock" class="form-control">
                </div>
            </div>
            <button type="button" class="btn btn-secondary mb-3" onclick="addSizeField()">+ Add Another Size</button>

            <button type="submit" class="btn btn-success">Add Product</button>
            <a href="/products" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>

<script>
function addSizeField() {
    const container = document.getElementById('sizes-container');
    const div = document.createElement('div');
    div.classList.add('input-group', 'mb-2');
    div.innerHTML = `
        <input type="text" name="sizes" placeholder="Size (e.g., US 9)" class="form-control">
        <input type="number" name="stocks" placeholder="Stock" class="form-control">
    `;
    container.appendChild(div);
}
</script>
</body>
</html>
