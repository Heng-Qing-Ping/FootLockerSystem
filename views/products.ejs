<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>FootLocker Products</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f5f5;
      font-family: 'Segoe UI', sans-serif;
    }

    .product-card {
      border: none;
      background: white;
      transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .product-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .product-img {
      height: 200px;
      object-fit: contain;
      background-color: #f8f9fa;
    }

    .product-title {
      font-weight: 600;
    }

    .add-btn {
      background-color: #111;
      color: white;
      border-radius: 50px;
    }

    .add-btn:hover {
      background-color: #444;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">All Products</h2>
      <% if (user && user.role === 'admin') { %>
        <a href="/products/add" class="btn btn-dark">Add Product</a>
      <% } %>
    </div>

    <form class="input-group mb-4" method="GET" action="/products/search">
      <input type="text" name="keyword" class="form-control" placeholder="Search shoes...">
      <button class="btn btn-outline-dark" type="submit">Search</button>
    </form>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% products.forEach(product => { %>
        <div class="col">
          <div class="card product-card h-100">
            <% if (product.image_url) { %>
              <img src="<%= product.image_url %>" class="card-img-top product-img" alt="<%= product.name %>">
            <% } else { %>
              <div class="card-img-top product-img d-flex align-items-center justify-content-center text-muted">No Image</div>
            <% } %>

            <div class="card-body text-center">
              <h5 class="product-title mb-1"><%= product.name %></h5>
              <p class="text-muted">$<%= parseFloat(product.price).toFixed(2) %></p>

              <% if (user && user.role === 'admin') { %>
                <div class="d-flex justify-content-center gap-2">
                  <a href="/products/edit/<%= product.id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <form action="/products/delete/<%= product.id %>" method="POST" onsubmit="return confirm('Delete product?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </div>
              <% } else { %>
                <form action="/cart/add/<%= product.id %>" method="POST">
                  <button class="btn add-btn btn-sm mt-2 w-100">Add to Cart</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>




